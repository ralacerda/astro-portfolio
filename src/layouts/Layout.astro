---
import NavBar from "@components/NavBar.astro";
import TheHead from "@components/TheHead.astro";
import "@/styles/index.scss";

interface Props {
  pageName: string;
}

const { pageName } = Astro.props;
const title = `Renato Lacerda | ${pageName}`;
---

<!DOCTYPE html>
<html lang="pt">
  <head>
    <TheHead title={title} />
  </head>
  <NavBar />
  <main>
    <slot />
  </main>
</html>
