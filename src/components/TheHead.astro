---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!-- Primary Meta Tags -->
<title>Renato Lacerda | Portfolio</title>
<meta name="title" content={title} />
<meta name="generator" content={Astro.generator} />
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />

<meta
  name="description"
  content="Desenvolvedor Front End com conhecimento de VueJS, Typescript, CSS, HTML5 e Astro, em busca de uma oportunidade como desenvolvedor júnior"
/>
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="https://ralacerda-portfolio.netlify.app/" />
<meta property="og:title" content={title} />
<meta
  property="og:description"
  content="Desenvolvedor Front End com conhecimento de VueJS, Typescript, CSS, HTML5 e Astro, em busca de uma oportunidade como desenvolvedor júnior"
/>
<meta
  property="og:image"
  content="https://ralacerda-portfolio.netlify.app/meta.png"
/>

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta
  property="twitter:url"
  content="https://ralacerda-portfolio.netlify.app/"
/>
<meta property="twitter:title" content={title} />
<meta
  property="twitter:description"
  content="Desenvolvedor Front End com conhecimento de VueJS, Typescript, CSS, HTML5 e Astro, em busca de uma oportunidade como desenvolvedor júnior"
/>
<meta
  property="twitter:image"
  content="https://ralacerda-portfolio.netlify.app/meta.png"
/>

